#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n;
    cin >> n;
    vector<long long> a(n);
    for (int i = 0; i < n; i++) cin >> a[i];

    bool sorted = true;
    long long ans = 1e18;

    for (int i = 0; i < n - 1; i++) {
        if (a[i] > a[i + 1]) {
            cout << 0 << "\n";
            return;
        }
        ans = min(ans, a[i + 1] - a[i]);
    }

    cout << ans / 2 + 1 << "\n";
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);

    int t;
    cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}
